<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Blog</title>
  
</head>
<body>
  
  <div class="container">
    <h1 class="mb-4">Select Your Project of Interest</h1>
    <a href="/success" class="btn btn-success">Main Page</a>
    

    
    <% Publish.forEach(publish => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= publish.name %></h4>

          <ul>
            <li  class="card-text mb-2">Project Desc: <%= publish.message %></li>
            <li  class="card-text mb-2">Skills Req: <%= publish.skills  %></li>
          </ul>
          
         
          <a href="ideas/<%= publish.id %>" class="btn btn-primary">Join</a>

         
         
         
           

         
        </div>
      </div>
      
    <% }) %>
  </div>
  
</body>
</html>